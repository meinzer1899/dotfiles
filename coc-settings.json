  "diagnostic-languageserver.filetypes": {
    "vim": "vint",
    "sh": "shellcheck",
    // "cmake": "cmakelint",
    "python": ["flake8", "mypy"],
    "markdown": ["write-good", "markdownlint"]
  },
  "coc.preferences.extensionUpdateCheck": "weekly",
  "diagnostic-languageserver.linters": {
    "vint": {
      "command": "vint",
      "debounce": 100,
      "args": [ "--style-problem", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vint",
      "formatLines": 1,
      "formatPattern": [
        "[^:]+:(\\d+):(\\d+):\\s*(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "message": 3
        }
      ]
    },
    "shellcheck": {
      "command": "shellcheck",
      "debounce": 100,
      "args": [
        "--format",
        "json",
        "-"
      ],
      "sourceName": "shellcheck",
      "parseJson": {
        "line": "line",
        "column": "column",
        "endLine": "endLine",
        "endColumn": "endColumn",
        "message": "${message} [${code}]",
        "security": "level"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "info": "info",
        "style": "hint"
      }
    },
    "zsh": {
      "command": "zsh",
      "args": ["-n", "%file"],
      "isStdout": false,
      "isStderr": true,
      "sourceName": "zsh",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):\\s+(.*)$",
        {
          "line": 1,
          "message": 2
        }
      ]
    },
    "flake8": {
      "sourceName": "flake8",
      "command": "flake8",
      "debounce": 200,
      "rootPatterns": [".git", "pyproject.toml", "setup.py"],
      "args": [
        // "--ignore=E402,C901,W503,W504,E116,E702,C0103,C0114,C0115,C0116,C0103,C0301,W0613,W0102,R0903,R0902,R0914,R0915,R0205,W0703,W0702,W0603",
        "--select=F,DUO,SIM",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatLines": 1,
      "formatPattern": [
        "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "W": "warning",
        "E": "warning",
        "F": "warning",
        "D": "warning",
        "S": "warning",
        "C": "info",
        "N": "hint"
      }
    },
    "mypy": {
      "sourceName": "mypy",
      "command": "mypy",
      "args": [
        "--no-color-output",
        "--no-error-summary",
        "--show-column-numbers",
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "%file"
      ],
      "formatPattern": [
        "^.*:(\\d+?):(\\d+?): ([a-z]+?): (.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "error": "error"
      }
    }
  },
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "builtin",
  "clangd.compilationDatabasePath": "build/RelWithDebInfo",
  "clangd.disableProgressNotifications": true,
  "clangd.showDBChangedNotification": false,
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "-j=3",
    "--completion-style=detailed",
    "--all-scopes-completion=true"
  ],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.1/clangd_15.0.1/bin/clangd",
  "inlayHint.enable": true,
  "inlayHint.enableParameter": true,
  "semanticTokens.enable": true
}
